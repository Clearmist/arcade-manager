{
  "executable": "ArcadeManager",
  "splashscreen": {
    "imageFile": "/wwwroot/img/splash.png"
  },
  "name": "Arcade Manager",
  "author": "cosmo0",
  "singleInstance": false,
  "build": {
    "appId": "com.arcade-manager.app",
    "productName": "ArcadeManager",
    "copyright": "Copyright Â© 2021",
    "buildVersion": "6.0.0",
    "compression": "maximum",
    "win": {
      "icon": "Assets/electron.ico"
    },
    "directories": {
      "output": "../../../bin/Desktop",
      "buildResources": "Assets"
    },
    "extraResources": [
      {
        "from": "./bin",
        "to": "bin",
        "filter": [ "**/*" ]
      }
    ],
    "files": [
      {
        "from": "./ElectronHostHook/node_modules",
        "to": "ElectronHostHook/node_modules",
        "filter": [ "**/*" ]
      },
      "**/*"
    ]
  }
}