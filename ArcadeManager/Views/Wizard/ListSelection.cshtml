@model Wizard
@{
    ViewData["title"] = "Wizard";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="navmenu">Home</a></li>
        <li class="breadcrumb-item">Wizard</li>
        <li class="breadcrumb-item">Emulator</li>
        <li class="breadcrumb-item active" aria-current="page">List selection</li>
    </ol>
</nav>

<h2>Wizard: choose lists</h2>

<p>
    Please choose the games selection(s) you want.
</p>
<p>
    All the games have been tested and work with a retro pad (SNES-like) or an arcade stick. Sometimes gameplay is possible but not ideal
    without a dedicated control (ex: racing games).
</p>
<p>
   Note that the various "tops" have duplicates: selecting the top200 and the top50 will only result in 200 games, since the top50 is a sub-selection
   of the top200.<br />
   Obviously the "tops" are highly subjective, and mainly destined to people who don't know much about arcade games. This tool also easily lets
   you <a asp-controller="Csv" asp-action="Index">define your own lists</a>.
</p>

<form asp-controller="Wizard" asp-action="PostListSelection" method="post">

    <input type="hidden" asp-for="DoOverlays" />
    <input type="hidden" asp-for="Emulator" />

    <div class="border rounded p-3 mb-3">
        <label><input type="checkbox" name="list" value="top200" checked="checked" /> <strong>The top 200</strong>: a balanced selection of all the great games, and a few hidden gems.</label>
        <br />
        <label><input type="checkbox" name="list" value="top50" /> <strong>The top 50</strong>: only the very best, a tight but balanced selection of all-time classics.</label>
        <br />
        <label><input type="checkbox" name="list" value="top80s" /> <strong>The top 100 of the 80's</strong>: from Asteroids to Final Fight, the best old-school games.</label>
        <br />
        <label><input type="checkbox" name="list" value="top90s" /> <strong>The top 100 of the 90's and 00's</strong>: from Smash TV to Deathsmiles, the best modern games.</label>
        <br />
        <label><input type="checkbox" name="list" value="neogeo" /> <strong>The top 100 NeoGeo</strong>: the 100 best games on NeoGeo.</label>
    </div>

    <div class="border rounded p-3 mb-3">
        <label>
            <input type="checkbox" name="list" value="icons" />
            <strong>100 icons</strong>: groundbreaking, revolutionary, unique, or just very popular. May not be very good by today's standards.<br />
            <br />
            <strong>Warning:</strong> some games in this list will not work well with a simple retro pad or arcade stick, and you might need a spinner,
            double stick, racing wheel, etc. You can sometimes get good results by changing the control bindings in the options.
        </label>
    </div>

    <div class="border rounded p-3 mb-3">
        <p>
            <strong>"All Killer, No Filler"</strong>: great games, still fun to play today, playable with an arcade stick, tested and validated by the community.<br />
            Lists from <a href="http://forum.arcadecontrols.com/index.php/topic,149708.0.html" class="blank">ArcadeControls forums</a> and customized.
        </p>

        <div class="row">
            <div class="col-4">
                <label><input type="checkbox" name="list" value="aknf-shooting" /> Shooting (@(Model.GameNumbers["aknf-shooting"]) games)</label>
            </div>
            <div class="col-4">
                <label><input type="checkbox" name="list" value="aknf-run-gun" /> Run and gun (@(Model.GameNumbers["aknf-run-gun"]) games)</label>
            </div>
            <div class="col-4">
                <label><input type="checkbox" name="list" value="aknf-platform" /> Platform (@(Model.GameNumbers["aknf-platform"]) games)</label>
            </div>
        </div>
        <div class="row">
            <div class="col-4">
                <label><input type="checkbox" name="list" value="aknf-fighting" /> Fighting (@(Model.GameNumbers["aknf-fighting"]) games)</label>
            </div>
            <div class="col-4">
                <label><input type="checkbox" name="list" value="aknf-beat-hack" /> Beat'em up and hack &amp; slash (@(Model.GameNumbers["aknf-beat-hack"]) games)</label>
            </div>
            <div class="col-4">
                <label><input type="checkbox" name="list" value="aknf-puzzle" /> Puzzle (@(Model.GameNumbers["aknf-puzzle"]) games)</label>
            </div>
        </div>
        <div class="row">
            <div class="col-4">
                <label><input type="checkbox" name="list" value="aknf-sports" /> Sports (@(Model.GameNumbers["aknf-sports"]) games)</label>
            </div>
            <div class="col-4">
                <label><input type="checkbox" name="list" value="aknf-racing" /> Racing (@(Model.GameNumbers["aknf-racing"]) games)</label>
            </div>
            <div class="col-4">
                <label><input type="checkbox" name="list" value="aknf-classics" /> Old school classics (@(Model.GameNumbers["aknf-classics"]) games)</label>
            </div>
        </div>
    </div>

    <div class="border rounded p-3 mb-3">
        <label><input type="checkbox" name="list" value="noclones" /> All the games, excluding duplicates (@(Model.GameNumbers["noclones"]) games)</label>
        <br />
        <label><input type="checkbox" name="list" value="clean" /> All the games, excluding duplicates, console ports (Playchoice 10...), mature/porn games, casino games, mahjong, etc  (@(Model.GameNumbers["clean"]) games)</label>
    </div>

    <div class="row">
        <div class="col-6">
            <a href="/" class="btn btn-outline-secondary px-3">Cancel</a>
        </div>
        <div class="col-6 text-right">
            <button type="submit" class="btn btn-primary px-3" id="submitButton">
                Next - set paths
            </button>
        </div>
    </div>

</form>

@section Scripts {
    <script type="text/javascript">
        $(':checkbox').on('change', (e) => {
            $('#submitButton').prop('disabled', $(':checkbox:checked').length === 0);
        });
    </script>
}